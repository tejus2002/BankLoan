    <script>
        $(document).ready(function() {
            // Fade in animations
            setTimeout(function() {
                $('.fade-in').addClass('active');
            }, 300);

            // Scroll animations
            $(window).scroll(function() {
                $('.fade-in').each(function() {
                    var elementTop = $(this).offset().top;
                    var elementVisible = 150;
                    var windowTop = $(window).scrollTop();
                    var windowHeight = $(window).height();

                    if (elementTop < (windowTop + windowHeight - elementVisible)) {
                        $(this).addClass('active');
                    }
                });
            });

            // Navbar scroll effect
            $(window).scroll(function() {
                if ($(this).scrollTop() > 50) {
                    $('.navbar').css('box-shadow', '0 10px 20px rgba(0, 0, 0, 0.1)');
                } else {
                    $('.navbar').css('box-shadow', '0 5px 15px rgba(0, 0, 0, 0.1)');
                }
            });

            // Counter animation
            function animateCounter(element) {
                var $this = $(element);
                var countTo = parseFloat($this.attr('data-count'));

                $({ countNum: 0 }).animate({
                    countNum: countTo
                }, {
                    duration: 2000,
                    easing: 'swing',
                    step: function() {
                        if (countTo % 1 === 0) {
                            $this.text(Math.floor(this.countNum) + "+");
                        } else {
                            $this.text(this.countNum.toFixed(1) + "B");
                        }
                    },
                    complete: function() {
                        if (countTo % 1 === 0) {
                            $this.text(countTo + "K+");
                        } else if (countTo === 24) {
                            $this.text(countTo + "/7");
                        } else if (countTo === 99.9) {
                            $this.text(countTo + "%");
                        } else {
                            $this.text(countTo + "B");
                        }
                    }
                });
            }

            // Trigger counter animation when stats section is visible
            function checkCounters() {
                var windowTop = $(window).scrollTop();
                var windowHeight = $(window).height();
                var statsTop = $('.stats-section').offset().top;

                if (statsTop < (windowTop + windowHeight - 100)) {
                    $('.stat-number').each(function() {
                        if (!$(this).hasClass('counted')) {
                            $(this).addClass('counted');
                            animateCounter(this);
                        }
                    });
                    $(window).off('scroll', checkCounters);
                }
            }

            $(window).on('scroll', checkCounters);
            checkCounters();

            // Feature card hover effect
            $('.feature-card').hover(
                function() {
                    $(this).find('.feature-icon').css('transform', 'scale(1.1) rotate(5deg)');
                },
                function() {
                    $(this).find('.feature-icon').css('transform', 'scale(1) rotate(0)');
                }
            );
        });
    </script>
